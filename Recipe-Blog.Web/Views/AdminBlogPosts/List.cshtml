@model List<Recipe_Blog.Web.Models.Domain.BlogPost>
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Blog Posts</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model != null)
    {
        <table class="table">
            <thead class="table-light">
                <tr>
                    <td>Id</td>
                    <td>Heading</td>
                    <td>Tags</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.Id</td>
                        <td>@blogPost.Heading</td>
                        <td>
                            @* Loop through each tag in collection of tags to display *@
                            <div class="d-flex">
                                @foreach(var tag in blogPost.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Blog Posts Were Found!</p>
    }

</div>